@model List<WebApplication8.Models.ApplicationUser>
@{
    ViewBag.Title = "TrainerView";
}

<h2>Trainer View</h2>

@Html.ActionLink("Create a new account", "Register", "Account", null, new { @class = "btn btn-primary" })
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">User Name</th>
            <th scope="col">Email</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>
                    @Html.ActionLink("Update", "UpdateTrainer", "Admin",
                                new { id = item.Id },
                                new { @class = "btn btn-warning" })
                    @Html.ActionLink("Delete", "Delete", "Admin",
                                new { id = item.Id },
                                new { @class = "btn btn-danger" })
                    @Html.ActionLink("Change Password", "ChangePassword", "Admin",
                                new { id = item.Id },
                                new { @class = "btn btn-success" })
                </td>
            </tr>
        }
    </tbody>
</table>


