@model WebApplication8.Models.CategoryCourseViewModel
@{
    ViewBag.Title = "CreateCourse";
}

<h2>CreateCourse</h2>
@Html.ActionLink("Back", "CourseManagement", null, new { @class = "btn btn-primary" })
<br />
@using (Html.BeginForm("CreateCourse", "Staff", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Course.CourseName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Course.CourseName, new { @class = "form-default" })
            @Html.ValidationMessageFor(model => model.Course.CourseName, " *required", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <br />
    <div class="form-group">
        @Html.Label("Course Detail", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Course.Detail, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Course.Detail, " *required", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Category", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.Id, new SelectList(Model.Categories, "Id", "CategoryName"), new { @class = "dropdown" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Create" />
        </div>
    </div>
}



