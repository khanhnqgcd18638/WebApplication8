@model WebApplication8.Models.Trainee
@{
    ViewBag.Title = "DetailsTrainee";
}

<h2>DetailsTrainee</h2>
@Html.ActionLink("Back", "TraineeManagement", "Staff", null, new { @class = "btn btn-primary" })

<div class="panel panel-default">
    <div class="panel-heading">
        @Html.Label("Name: ")
        <h3 class="panel-title">@Model.UserName</h3>
    </div>
    <div class="panel-body">
        @Html.Label("Id: ")
        @Model.Id
    </div>
    <div class="panel-body">
        @Html.Label("Age: ")
        @Model.Age
    </div>
    <div class="panel-body">
        @Html.Label("Date of Birth: ")
        @Model.DateofBirth
    </div>
    <div class="panel-body">
        @Html.Label("Education: ")
        @Model.Education
    </div>
    <div class="panel-body">
        @Html.Label("Main Programming Language: ")
        @Model.MainProgrammingLang
    </div>
    <div class="panel-body">
        @Html.Label("Toeic Score: ")
        @Model.ToeicScore
    </div>
    <div class="panel-body">
        @Html.Label("Experience: ")
        @Model.ExpDetail
    </div>
    <div class="panel-body">
        @Html.Label("Department: ")
        @Model.Department
    </div>
    <div class="panel-body">
        @Html.Label("Location: ")
        @Model.Location
    </div>
</div>



