@model List<WebApplication8.Models.Course>
@{
    ViewBag.Title = "AllCourse";
}

<h2>AllCourse</h2>
@Html.ActionLink("Back", "Index", "Trainee", null, new { @class = "btn btn-primary" })
@Html.ActionLink("Course Asigned", "CourseAssign", "Trainee", null, new { @class = "btn btn-primary" })
<h1> </h1>
@using (Html.BeginForm("AllCourse", "Trainee", "POST"))
{
    <div class="form-group">
        @Html.Label("Search")
        @Html.TextBox("searchString", null, new { @class = "form-control" })
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Course</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CourseName</td>
                <td>@item.Category.CategoryName</td>
                <td>
                    @Html.ActionLink("Details", "DetailCourse", "Staff",
                                 new { id = item.Id },
                                 new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
